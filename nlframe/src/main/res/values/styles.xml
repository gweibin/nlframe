<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <!--<item name="colorPrimaryDark">@color/white_gray</item>-->
        <item name="colorAccent">@color/brandColor</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleBarTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!--文本-->
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="text.small">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="text.big">
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="text.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text.brand">
        <item name="android:textColor">@color/brandColor</item>
    </style>

</resources>
